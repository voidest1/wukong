#var kill {{killing}{0}{fly}{0}{mobs}{0}}
#alias {ak} {ask li jing about newkill}
#alias {ds} {decode shu}
#alias {k} {perform qianyan;#delay {6} {follow $kill[monster][ename];kill $kill[monster][ename]}}
#alias {r} {#delay {3} {mingsi 200}};
#act {^你行功完毕，从冥思中回过神来。$} {#delay {2} {ef;#if {$kill[killing] == 1} {dazuo 200}}};
#act {^你行功完毕，吸一口气，缓缓站了起来。$} {#delay {2} {er;#if {$kill[killing] == 1} {fly sky;#delay {3} {g lijing ak}}}}
#alias {kill.start} {
	#if {"%3" == ""}
	{
		#echo {Syntax: kill.start <guard id> <guard name> <scouter id> [can fly]};
		#return;
	};
	#var kill[guard][ename] %1;
	#var kill[guard][cname] %2;
	#var kill[scouter][ename] %3;
	#var kill[killing] 1;
	#var kill[mobs] 0;
	ui_message {开始灭妖(newkill)};
}
#act {^李靖对你说道：近有%1(%2)在%3为非作歹，请速去降服！} {
	#untick {an};
	#format ename {%l} {%2}; 
	#var kill[monster] {{cname}{%1}{ename}{$ename}{carea}{%3}{earea}{@map_area_c2e{%3}}};
	#unvar ename;
	#local s {Kill $kill[monster][cname]($kill[monster][ename]) in $kill[monster][carea]($kill[monster][earea])};
	ui_message {$s};
	#if {"$kill[guard]" != ""} {tell $kill[guard][ename] $s};
	#if {"$kill[scouter]" != ""} {tell $kill[scouter][ename] $s tell $kill[guard][ename]};
	#if {$kill[fly] == 1} {fly changan;#delay {2} {g safe {#echo {Don't forget decode shu};#bell}}};
	#else {g kp};
}
#act {^{$kill[guard][cname]}将{$kill[monster][cname]}从背上放了下来，躺在地上。$} {k}
#act {^李靖对手中照妖镜一看，说：这位%1,妖魔已除尽,不妨先去歇息。$} {#tick {an} {#if {#kill[killing] == 1} {ak}} {30}}
#act {从天上徐徐飘下几页天书，落入你的怀中。} {#math kill[mobs] {$kill[mobs]+1};#if {$kill[fly] == 1} {r};#else {g lijing {ak}}}
